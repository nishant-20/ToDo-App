<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alarm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nishantdayal.todolistappdb.AlarmActivity">


    <Button
        android:text="Completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/done_buttonalarmactivity"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        android:layout_marginTop="16dp" />

    <Button
        android:text="Reschedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reschedule_buttonalarmactivity"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/done_buttonalarmactivity"
        android:layout_marginTop="16dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="285dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.55772996" />

    <TextView
        android:hint="Description"
        android:layout_width="254dp"
        android:layout_height="162dp"
        android:textSize="25sp"
        android:gravity="center"
        android:id="@+id/descriptiontextViewalarmactivity"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        android:layout_marginBottom="8dp" />

    <Button
        android:text="Dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dismiss_buttonalarmactivity"
        app:layout_constraintRight_toRightOf="@+id/done_buttonalarmactivity"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/reschedule_buttonalarmactivity"
        app:layout_constraintLeft_toLeftOf="@+id/done_buttonalarmactivity" />
</android.support.constraint.ConstraintLayout>
